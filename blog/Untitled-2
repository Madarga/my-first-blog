#kwargs = pk, args= request, kwargs = pk post and get lang gyud siya

class BlogPost(TemplateView):
    template_name = 'blog/post_edit.html'

    def post_new(self, *args):
        if request.method == "POST":
            form = PostForm(request.POST)
            if form.is_valid():
                post = form.save(commit=False)
                post.author = request.user
                post.published_date = timezone.now()
                post.save()
                return redirect('post_detail', pk=post.pk)
        else:
            form = PostForm()
        return render(request, context)

    def post_edit(self, *args, **kwargs): #kwargs = pk, args= req
        post = get_object_or_404(Post, pk=pk)
        if request.method == "POST":
            form = PostForm(request.POST, instance=post)
            if form.is_valid():
                post = form.save(commit=False)
                post.author = request.user
                post.published_date = timezone.now()
                post.save()
                return redirect('post_detail', pk=post.pk)
        else:
            form = PostForm(instance=post)
        return render(request, {'form':form})




  def post_list(self, request):
        posts = Post.objects.filter(published_date__lte=timezone.now()).order_by('published_date')
        context = 
        return render(request, 'blog/post_list.html', context)

    def post_detail(self, request, pk):
        post = get_object_or_404(Post, pk=pk)
        return render(request, 'blog/post_detail.html', {'post': post})

    def post_new(self, request):
        if request.method == "POST":
            form = PostForm(request.POST)
            if form.is_valid():
                post = form.save(commit=False)
                post.author = request.user
                post.published_date = timezone.now()
                post.save()
                return redirect('post_detail', pk=post.pk)
        else:
            form = PostForm()
        
        context = {'form':form}
        return render(request, 'blog/post_edit.html', context)

    def post_edit(self, request, pk):
        post = get_object_or_404(Post, pk=pk)
        if request.method == "POST":
            form = PostForm(request.POST, instance=post)
            if form.is_valid():
                post = form.save(commit=False)
                post.author = request.user
                post.published_date = timezone.now()
                post.save()
                return redirect('post_detail', pk=post.pk)
        else:
            form = PostForm(instance=post)
        context = {'form', form}
        return render(request, 'blog/post_edit.html', context)
    
